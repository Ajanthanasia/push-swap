{% extends 'base.html.twig' %}

{% block title %}Hello AnswerController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Categorie :
			{{categorie.name}}</h1>

		Below Questions here:
		<br>
		{% if app.user %}
			<a href="{{ path('app_home') }}">
				<button>
					Home
				</button>
			</a>
		{% else %}
			<a href="{{ path('app_login') }}">
				<button>Login</button>
			</a>
		{% endif %}
		<div class="example-wrapper">
			{% for question in questions %}
				<div>
					<div>
						{{ loop.index }}
						)
						{{ question.question}}
					</div>
					<div>
						{% if app.user %}
							<a href="{{ path('app_answer_show',{'id':question.id}) }}">
								<button>Show Question</button>
							</a>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
